                            <a href="#" class="btn btn-sm bg-light-blue" target="_blank">查看</a>
                            <a href="#" class="btn btn-sm bg-orange">编辑</a>
                            <a href="#" class="btn btn-sm bg-red delete">删除</a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <p class="pull-left">
                    <button id="del-all" class="btn btn-sm bg-red delete">删除所选</button>
                </p>
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                    <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                    <li><a>12 / 32 / 145</a></li>
                    <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
