                </ul>
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
{% endblock %}
{% block bottom %}
    <script src="{{ base_path }}/js/table-checked-all.js"></script>
    <script>
        //打印所有选中的值
        $('#del-all').on('click', function () {
            var checked = getChecked();
            if (checked.length) {
                alert(checked);
            }
        })
    </script>
{% endblock %}