{% extends "share/base.twig" %}
{% block main %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            图文编辑器演示
            <small>使用 CK Editor</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">表单演示</a></li>
            <li class="active">图文编辑器演示</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <form role="form">
            <!-- Default box -->
            <div class="box">

                <div class="box-body">
                    <div class="form-group">
                        <label>新闻标题</label>
                        <input type="text" class="form-control" id="form-email" placeholder="请输入新闻标题">
                    </div>
                    <div class="form-group">
                        <label>新闻内容</label>
                        <textarea id="content" rows="10" cols="80" class="form-control">
                               我是 CK Editor 图文编辑器。可以上传图片，可以全屏编辑，可以自定义工具栏以限定功能。
                        </textarea>
                    </div>
                </div>
                <!-- /.box-body -->

                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn bg-orange">
                        <i class="fa fa-fw fa-check"></i>确定
                    </button>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </form>
    </section>
    <!-- /.content -->
{% endblock %}

{% block bottom %}
    <script src="{{ base_path }}/js/plugins/ckeditor/ckeditor.js"></script>

    <script>
        $(function () {
            CKEDITOR.replace('content');
        });
    </script>
{% endblock %}