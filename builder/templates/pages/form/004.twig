{% extends "share/base.twig" %}
{% block top %}
    <link rel="stylesheet" href="{{ base_path }}/js/plugins/colorpicker/bootstrap-colorpicker.min.css">
    <link rel="stylesheet" href="{{ base_path }}/js/plugins/bootstrap-slider/slider.css">
{% endblock %}
{% block main %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            其他特殊输入演示
            <small>颜色输入等</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">表单演示</a></li>
            <li class="active">其他特殊输入演示</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <form role="form" class="form-horizontal">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">其他特殊输入演示</h3>
                </div>
                <div class="box-body">

                    <div class="form-group">
                        <label class="control-label col-sm-2">颜色选择</label>

                        <div class="col-sm-10">
                            <div class="input-group color-selector">
                                <div class="input-group-addon">
                                    <i></i>
                                </div>
                                <input type="text" class="form-control" value="#00AABB">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-email" class="col-sm-2 control-label">关注的车价（万）</label>
                        <div class="col-sm-10">
                            <input type="text" value="" class="slider form-control" data-slider-min="3"
                                   data-slider-max="1000" data-slider-step="1" data-slider-value="[50,300]"
                                   data-slider-orientation="horizontal" data-slider-selection="before"
                                   data-slider-tooltip="show" data-slider-id="blue">
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <button type="submit" class="btn bg-orange">
                                <i class="fa fa-fw fa-check"></i> 确定
                            </button>
                        </div>
                    </div>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </form>
    </section>
    <!-- /.content -->
{% endblock %}
{% block bottom %}
    <script src="{{ base_path }}/js/plugins/colorpicker/bootstrap-colorpicker.min.js"></script>
    <!-- Ion Slider -->
    <script src="{{ base_path }}/js/plugins/ionslider/ion.rangeSlider.min.js"></script>
    <!-- Bootstrap slider -->
    <script src="{{ base_path }}/js/plugins/bootstrap-slider/bootstrap-slider.js"></script>
    <script>
        $(function () {
            $(".color-selector").colorpicker({});

            $('.slider').slider();
        });
    </script>
{% endblock %}