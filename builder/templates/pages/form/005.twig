{% extends "share/base.twig" %}
{% block main %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            限定用户输入格式演示
            <small>使用 Jquery.inputmask</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">表单演示</a></li>
            <li class="active">限定用户输入格式演示</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <form role="form">
            <!-- Default box -->
            <div class="box">

                <div class="box-body">
                    <div class="form-group">
                        <label>固定电话</label>

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="text" class="form-control" data-inputmask='"mask": "9999-99999999"' data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label>IP 地址</label>

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-laptop"></i>
                            </div>
                            <input type="text" class="form-control" data-inputmask="'alias': 'ip'" data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label>Email 地址</label>

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-at"></i>
                            </div>
                            <input type="text" class="form-control" data-inputmask="'alias': 'email'" data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label>货币金额</label>

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-rmb"></i>
                            </div>
                            <input type="text" class="form-control"
                                   data-inputmask="
                                   'alias': 'numeric',
                                   'rightAlign': 'false',
                                   'groupSeparator': ',',
                                   'autoGroup': true,
                                   'digits': 2,
                                   'digitsOptional': false,
                                   'prefix': '￥ ',
                                   'placeholder': '0'"
                                   data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label>正则匹配</label>
                        <input id="regex" type="text" class="form-control">
                        <p class="help-block"><i class="fa fa-fw fa-question-circle text-orange"></i>只允许数字和字符，不允许中文。
                        </p>
                    </div>
                </div>
                <!-- /.box-body -->

                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn bg-orange">
                        <i class="fa fa-fw fa-check"></i>确定
                    </button>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </form>
    </section>
    <!-- /.content -->
{% endblock %}

{% block bottom %}
    <!-- InputMask -->
    <script src="{{ base_path }}/js/plugins/input-mask/jquery.inputmask.bundle.min.js"></script>
    <script>
        $(function () {
            $("[data-inputmask]").inputmask();
            $('#regex').inputmask('Regex', {regex: "[a-zA-Z0-9._%-]+"});
        });
    </script>
{% endblock %}