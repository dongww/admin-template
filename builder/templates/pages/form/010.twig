{% extends "share/base.twig" %}
{% block top %}
    <link rel="stylesheet" href="{{ base_path }}/js/plugins/datepicker/datepicker3.css">
    <link rel="stylesheet" href="{{ base_path }}/js/plugins/timepicker/bootstrap-timepicker.min.css">
{% endblock %}
{% block main %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            日期和时间输入演示
            <small>在用户输入日期和时间的时候提供更佳的体验</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">表单演示</a></li>
            <li class="active">日期和时间项演示</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <form role="form" class="form-horizontal">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">日期和时间输入演示</h3>
                </div>
                <div class="box-body">

                    <div class="form-group">
                        <label for="form-email" class="col-sm-2 control-label">限定格式</label>
                        <div class="col-sm-10">
                            <div class="input-group ">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" data-inputmask="'alias': 'yyyy-mm-dd'"
                                       data-mask="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-email" class="col-sm-2 control-label">日期选择</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input id="date-selector" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-email" class="col-sm-2 control-label">日期选择约束</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input id="date-selector-limited" type="text" class="form-control">

                            </div>
                            <p class="help-block"><i class="fa fa-fw fa-question-circle text-orange">
                                </i>约束选择日期从 2016-01-01 到 2016-05-01。
                            </p>
                        </div>
                    </div>
                    <div id="date-range" class="form-group input-daterange">
                        <label for="form-email" class="col-sm-2 control-label">日期范围选择</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" placeholder="开始日期">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" placeholder="结束日期">
                        </div>
                    </div>
                    <div class="">
                        <div class="form-group ">
                            <label for="form-time" class="col-sm-2 control-label">时间选择</label>
                            <div class="col-sm-10">
                                <div class="input-group bootstrap-timepicker">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input id="time-selector" type="text" class="form-control timepicker">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <button type="submit" class="btn bg-orange">
                                <i class="fa fa-fw fa-check"></i> 确定
                            </button>
                        </div>
                    </div>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </form>
    </section>
    <!-- /.content -->
{% endblock %}
{% block bottom %}
    <script src="{{ base_path }}/js/plugins/input-mask/jquery.inputmask.bundle.min.js"></script>
    <script src="{{ base_path }}/js/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="{{ base_path }}/js/plugins/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>
    <script src="{{ base_path }}/js/plugins/timepicker/bootstrap-timepicker.min.js"></script>

    <script>
        $(function () {
            $("[data-inputmask]").inputmask();

            $('#date-selector').datepicker({
                format: "yyyy-mm-dd",
                todayBtn: "linked",
                language: "zh-CN"
            });

            $('#date-selector-limited').datepicker({
                format: "yyyy-mm-dd",
                todayBtn: "linked",
                startDate: "2016-01-01",
                endDate: "2016-05-01",
                language: "zh-CN"
            });

            $('.input-daterange').datepicker({
                format: "yyyy-mm-dd",
                language: "zh-CN"
            });

            $("#time-selector").timepicker({
                showMeridian: false
            });
        });
    </script>
{% endblock %}