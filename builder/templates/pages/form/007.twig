{% extends "share/base.twig" %}
{% block top %}
    <link rel="stylesheet" href="{{ base_path }}/js/plugins/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.css">
{% endblock %}
{% block main %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            表单验证演示
            <small>使用 jquery-validation</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">表单演示</a></li>
            <li class="active">表单验证演示</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <form id="validate-form" role="form" class="form-horizontal validate-form">
            <!-- Default box -->
            <div class="box">
                <div class="box-body">

                    <div class="form-group">
                        <label for="form-email" class="col-sm-2 control-label">Email 地址</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="form-email" name="email"
                                   placeholder="输入 Email 地址" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-password" class="col-sm-2 control-label">密码</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="form-password" name="password"
                                   placeholder="输入密码" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-password-again" class="col-sm-2 control-label">重复密码</label>
                        <div class="col-sm-10">
                            <input type="password" equalTo="#form-password" class="form-control"
                                   id="form-password-again" name="password-again" placeholder="再次输入密码" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-disabled" class="col-sm-2 control-label">禁用的输入框</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="form-disabled" placeholder="禁用状态" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile" class="col-sm-2 control-label">文件上传</label>
                        <div class="col-sm-10">
                            <input name="image" type="file" id="exampleInputFile" required>
                            <p class="help-block"><i class="fa fa-fw fa-question-circle text-orange"></i>可以提供简要的帮助说明。
                            </p>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">下拉单选</label>
                        <div class="col-sm-10">
                            <select name="mobile" class="form-control select2" style="width: 100%;" required>
                                <option selected="selected" value="">最喜欢的手机</option>
                                <option>iPhone 6S</option>
                                <option>三星</option>
                                <option>华为</option>
                                <option>小米</option>
                                <option>摩托罗拉</option>
                                <option>锤子</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">性别</label>
                        <div class="col-sm-10 checkbox">
                            <label class="margin-r-5">
                                <input type="radio" name="r1" class="minimal" required>
                                男
                            </label>
                            <label class="margin-r-5">
                                <input type="radio" name="r1" class="minimal">
                                女
                            </label>
                            <label>
                                <input type="radio" name="r1" class="minimal">
                                不男不女
                            </label>
                            <label class="error" for="r1"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">是否同意条款</label>
                        <div class="col-sm-10 checkbox">
                            <input type="checkbox" id="agree" name="agree" required>
                            <label class="error" for="agree"></label>
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->

                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <button type="submit" class="btn bg-orange">
                                <i class="fa fa-fw fa-check"></i> 确定
                            </button>
                        </div>
                    </div>

                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </form>
    </section>
    <!-- /.content -->
{% endblock %}

{% block bottom %}
    <script src="{{ base_path }}/js/plugins/iCheck/icheck.min.js"></script>
    <!-- Select2 -->
    <script src="{{ base_path }}/js/plugins/select2/select2.full.min.js"></script>
    <script src="{{ base_path }}/js/plugins/jquery-validation/dist/jquery.validate.js"></script>
    <script src="{{ base_path }}/js/plugins/jquery-validation/dist/localization/messages_zh.js"></script>
    <script src="{{ base_path }}/js/plugins/bootstrap-switch/dist/js/bootstrap-switch.js"></script>
    <script src="{{ base_path }}/js/jquery-validate-bootstrap.js"></script>
    <script>
        $(function () {
            $('input[type="radio"]').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            });

            $("#agree").bootstrapSwitch({
                onText: '是',
                offText: '否',
            });

            $(".select2").select2();
        });
    </script>
{% endblock %}